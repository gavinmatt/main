---
export const prerender = true;

import { CollectionEntry, getCollection } from "astro:content";
import type { BlogSchema } from "../../content/config";
import PostLayout from "../../layouts/PostLayout.astro";

export async function getStaticPaths() {
  const postEntries = await getCollection("blog");

  // Defensive: filter out anything weird/undefined
  const safeEntries = (postEntries || []).filter((entry) => entry && entry.slug);

  return safeEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

interface Props {
  entry: CollectionEntry<"blog">;
}

const { entry } = Astro.props;

// If Astro ever hands us a bad entry for some reason, fail gracefully
if (!entry) {
  throw new Error("Missing blog entry prop. Is prerender enabled and getStaticPaths returning props correctly?");
}

const post: BlogSchema = entry.data;
const { Content } = await entry.render();
---

<PostLayout
  title={post.title}
  description={post.description}
  pubDate={post.pubDate}
  heroImage={post.heroImage}
  updatedDate={post.updatedDate}
  badge={post.badge}
  tags={post.tags}
>
  <Content />
</PostLayout>
