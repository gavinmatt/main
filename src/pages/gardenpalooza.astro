<style>
  /* Import Comic Neue at the top */
  @import url('https://fonts.googleapis.com/css2?family=Comic+Neue:wght@400;700&display=swap');

  /* Header styling with Comic Sans-inspired font stack */
  .header-container {
    font-family: 'Comic Sans MS', 'Comic Neue', 'Chalkboard SE', cursive, sans-serif;
    font-size: min(8vw, 5rem);
    font-weight: bold;
    text-align: center;
    text-transform: uppercase;
    background-image: linear-gradient(to right, red, orange, yellow, green, blue, indigo, violet);
    -webkit-background-clip: text;
    color: transparent;
    white-space: nowrap;
    overflow: hidden;
    width: 100%;
    max-width: 100%;
    padding: 1rem 0;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* Table styling for Changelog */
  .changelog-table {
    margin: 20px auto;
    border-collapse: collapse; /* Ensures no spacing between cells */
    border-spacing: 0;
    width: 90%;
    max-width: 90vw;
    table-layout: auto; /* Adjust column widths dynamically */
  }

  /* Remove all borders and spacing between cells */
  .changelog-table th,
  .changelog-table td {
    padding: 8px 12px; /* Reduce padding */
    border: none; /* Remove borders */
    color: #fff;
    vertical-align: middle; /* Align content to center vertically */
    white-space: normal; /* Allow text wrapping */
  }

  /* Header row */
  .changelog-table thead .pill-row {
    background-color: #4CAF50;
    text-align: center;
  }

  /* Regular row */
  .changelog-table tbody .pill-row.old {
    background-color: #CD853F;
  }

  /* Date cell */
  .date-cell {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2px 6px; /* Reduce padding */
    font-size: 0.9rem;
    color: #fff;
    text-align: center;
  }

  .calendar-icon {
    margin-right: 5px;
  }

  /* Align columns in the visible row */
  .changelog-table tbody .pill-row.old td:nth-child(1),
  .changelog-table tbody .pill-row.old td:nth-child(2) {
    text-align: center;
  }
  .changelog-table tbody .pill-row.old td:nth-child(3) {
    text-align: left;
  }
</style>

