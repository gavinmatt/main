S---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hello!</div>
    <div class="text-5xl font-bold">I'm Gavin Matthews</div>
    <div class="text-3xl py-3 font-bold">Product Manager, Writer, and Project Starter</div>
    <div class="mt-8">
      <a class="btn" href="https://www.linkedin.com/in/gavinmatt/" target="_blank"> Let's connect!</a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">My Latest Blog Posts</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + post.slug}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  } 


 <div style="margin-top:30px">
    <div class="text-3xl w-full font-bold mb-2">My Latest Projects</div>
  </div>

  <HorizontalCard
    title="Contentful AI Content Generator"
    img="/AICG.png"
    desc="Contentful's AI Content Generator uses OpenAI to generate, rewrite, translate, and optimize content."
    url="https://www.contentful.com/marketplace/app/ai-content-generator/"
    badge="NEW"
    />
    <HorizontalCard
    title="Contentful Marketplace"
    img="/Marketplace.png"
    desc="Contentful Marketplace is filled with dozens of apps and integrations with industry standard trust and security."
    url="https://www.contentful.com/marketplace/"
  />
  <HorizontalCard
    title="Red Canary Linux EDR"
    img="/Linux.jpg"
    desc="Red Canary's Linux EDR provides industry-leading MDR and EDR for Linux instances, including desktops/laptops, servers, and cloud instances."
    url="https://redcanary.com/products/linux-edr/"
  />

  <div class="divider my-0" />

  <div style="margin-top:30px">
    <div class="text-3xl w-full font-bold mb-2">My Latest Publications</div>
  </div>

  <HorizontalCard
    title="Marketers Overwhelmed by Data Look to AI for Help"
    img="https://res.cloudinary.com/draaqu0o9/image/upload/f_auto,q_auto/lgfysy7muoanb6prrflu"
    desc="Interview with Bloomberg on how AI can transform data for personalization"
    url="https://sponsored.bloomberg.com/quicksight/contentful/marketers-overwhelmed-by-data-look-to-ai-for-help"
    badge="Interview"
    />
  <HorizontalCard
    title="Responsible AI begins with robust policies for teams using AI technologies"
    img="https://res.cloudinary.com/draaqu0o9/image/upload/f_auto,q_auto/v1/Publications/j1d44a7vlwj52mcx7u4q"
    desc="I interviewed Alaura Weaver, Senior Manager, Content and Community at Writer, about responsible use of AI in content"
    url="https://www.contentful.com/blog/responsible-ai-begins-with-robust-policies-for-teams-using-ai-technologies/"
    badge="Article"
    />
  <HorizontalCard
    title="Extend experiences and scale fast with the AI Content Generator"
    img="https://res.cloudinary.com/draaqu0o9/image/upload/f_auto,q_auto/v1/Publications/derofh3bdh2crerqpavo"
    desc="I cover Contentful's AI Content Generator, bringing together ChatGPT and the world's most scalable headless CMS!"
    url="https://www.contentful.com/blog/extend-experiences-scale-fast-ai-content-generator/"
    badge="Article"
    />
  
</BaseLayout>
